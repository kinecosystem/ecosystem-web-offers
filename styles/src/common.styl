/*** Colors ***/
$deep-sky-blue = #047cfc
$blue-grey = #7884a5
$bright-sky-blue = #08c6f1
$bright-blue = #0262ff
$green-blue = #00d093
$watermelon = #ff4b67
$kin-purple = #6F41E8;

/*** Mixins ***/
flex-box($direction = row, $justify = flex-start, $align = stretch)
	// $align only supports stretch and center
	// $direction only supports row and column
	display: -webkit-box
	display: -webkit-flex
	display: flex
	-webkit-justify-content: $justify
	justify-content: $justify
	-webkit-flex-direction: $direction
	flex-direction: $direction
	-webkit-align-items: $align
	align-items: $align

font-roboto()
	font-family: 'Roboto', 'San Francisco', sans-serif
	font-weight: normal
	font-style: normal
	font-stretch: normal
	line-height: normal

btn()
	border-radius: 5px
	width: 86vw
	height: 50px
	padding 0
	font-size: 4.2vw
	border: solid 1px #3d3d3d
	outline none

btn-active()
	background-color: $kin-purple
	color white

.hidden
	display: none

.kin-purple
	color: $kin-purple;

