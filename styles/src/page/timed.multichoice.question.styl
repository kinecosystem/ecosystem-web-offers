@require "../common.styl"

.page.question.multichoice.timed
	.header
		.timer
			//width: 15vw
			font-size: 1.3rem
			//text-align: center
			letter-spacing: -0.5px
			color: #ea690b
			font-roboto()
			&.warn
				color: $watermelon

		.pageProgress
			font-roboto()
			font-weight: bold;
			width: 12vw
			font-size: 4.5vw
			text-align: center
			letter-spacing: -0.5px
			// margin: 5% auto 1%

		.title
			margin: 2% auto 10%
	.choices
		.choice
			.receivedAmount
				opacity 0
				transition: all .5s ease;
				position absolute
				right 5vw
			&.selected.rightAnswer
				.receivedAmount
					opacity 1
