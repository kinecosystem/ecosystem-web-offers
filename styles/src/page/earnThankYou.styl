@require "../common.styl"

.page.earnThankYou
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	flex-box(column)  // This is kind of a hack to make it full screen
	background-image: #1f1f1f
	.text
		font-roboto()
		color: white
		width: 100%
		text-align: center
		font-size: 8vw
		margin: 30vh 0 0
		h1
			font-size: 1.2rem
			margin: 6vh 0 .5rem;
			font-roboto()
		h2
			font-size: 1.2rem
			margin: 0;
			font-roboto()
		.standAloneText
			margin: 14vh 0 0
			font-size: 8vw
			font-roboto()
		.amount
			font-weight: 500
			font-size: 12vw
			color: $kin-purple
			> *
				vertical-align: middle
			.full-width-plus
				font-size: 7vw
			img
				width: 1.3rem
				margin-right: .4rem
	.footer
		img
			position: absolute
			&.cheering-hands
				width: 100%
				left: 0
				bottom: 0
